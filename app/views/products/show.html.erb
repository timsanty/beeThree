<h1>product show page!</h1>

<div class="panel panel-success user-txn">
  
  <div class="panel-heading">
    <h4><span><%= @product.name %></span>
    <span class="pull-right">$<%= @product.price %></span></h4>
  </div>

  <div class="panel-body">
    <span class="col-xs-3">
      <div class="img-rounded img-responsive pull-left txn-product-image"><%=  image_tag @product.avatar.url(:medium) %>
      </div>
    </span>
  
    <div class="col-xs-6 txn-product-info">
      <p><%= @product.description %></p>
    </div>
    <div>
      <button type="button" class = "btn btn-warning" id="edit">Edit</button>
    </div>
</div>  

<div class="panel panel-success user-txn">
  <div class="field">
  <%= form_for(@product) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%#= f.label :avatar  %>
  <%= f.file_field :avatar %>

  <%= f.submit %>
  <% end %>
</div>

</div> 

